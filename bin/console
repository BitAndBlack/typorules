use BitAndBlack\TypoRules\Command\DocumentationCreateCommand;
use Symfony\Component\Console\Application;

/**
 * @param string $file
 * @return mixed
 */
function includeIfExists(string $file): mixed
{
    if (file_exists($file)) {
        return include $file;
    }

    return false;
}

if (
    (!$loader = includeIfExists(__DIR__ . '/../vendor/autoload.php'))
    && (!$loader = includeIfExists(__DIR__ . '/../../../autoload.php'))
) {
    $message = 'You must set up the project dependencies, run the following commands:' . PHP_EOL .
        'curl -sS https://getcomposer.org/installer | php' . PHP_EOL .
        'php composer.phar install' . PHP_EOL;
    fwrite(STDERR, $message);
    exit(1);
}

$application = new Application();

if (true === method_exists($application, 'add')) {
    $application->add(new DocumentationCreateCommand());
} else {
    $application->addCommand(new DocumentationCreateCommand());
}

$application->run();